#!/usr/bin/env ruby
require 'uptimer'
require 'optparse'
require 'yaml'

if ARGV.size < 3
  puts 'Missing arguments'
  exit(1)
end

monitor = Uptimer::Monitor.new(ARGV[0], ARGV[1].to_i)
monitor.email = ARGV[2]
puts File.expand_path("../config/", File.dirname(__FILE__))
begin
  monitor.start
rescue Interrupt then end
